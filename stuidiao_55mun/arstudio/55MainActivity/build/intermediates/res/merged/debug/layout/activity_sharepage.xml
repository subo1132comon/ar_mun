<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f3" >

    <include 
        android:id="@+id/sharefacetop"
        layout="@layout/top_frame" />
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/sharefacetop"
	    >
	    <LinearLayout 
	          android:layout_centerHorizontal="true"
	         android:layout_marginTop="40dp"
	        android:id="@+id/sharebglayout"
	        android:layout_width="@dimen/facebookshare_icon"
	        android:layout_height="@dimen/facebookshare_icon"
	        android:padding="5dp"
	        android:background="@drawable/facebooksharebg"
	        >
	         <ImageView 	    
	        android:scaleType="fitXY"  
	        android:id="@+id/sharebg"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:background="@drawable/default_disc_360"
	        />
	        
	    </LinearLayout>
	   
	    <TextView 
	        android:layout_marginTop="26dp"
	        android:layout_below="@id/sharebglayout"
	        android:id="@+id/musicname"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:textColor="#000000"
	        android:textSize="15sp"
	        />

	    <TextView
	        android:id="@+id/desc"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/musicname"
	        android:layout_marginTop="10dp"
	        android:gravity="center"
	        android:text="@string/desc_share"
	        android:textColor="#228fe4"
	        android:textSize="20sp"
	        android:textStyle="bold" />

	    <TextView 
	        android:layout_marginTop="10dp"
	        android:layout_below="@+id/desc"
	        android:id="@+id/uninstens"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:textSize="14sp"
	        />
	    <TextView 
	           android:layout_marginTop="9dp"
	        android:layout_below="@id/musicname"
	        android:id="@+id/musicauther"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:textColor="#666666"
	        android:textSize="12sp"
	        />
	    <LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/musicauther"
		    android:padding="15dp"
		    android:orientation="horizontal"
			android:layout_marginTop="36.5dp"
			android:gravity="center"
		    android:layout_centerHorizontal="true"
	    >
		    <LinearLayout 
		        android:id="@+id/gotoshare_face"
		        android:layout_width="100dp"
		        android:layout_height="wrap_content"
		        android:padding="2dp"
		        android:gravity="center"
		        android:orientation="vertical"
		        android:visibility="gone"
		        android:layout_margin="10dp"
		        >
		        <ImageView 
		            android:layout_gravity="center"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/fb_image"
		            />
		        <TextView 
		            android:layout_marginTop="5dp"
		             android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		           android:text="facebook"
		           android:textColor="#000000"
		        android:textSize="13sp"
		            />
		    </LinearLayout>
		     <LinearLayout 
		        android:id="@+id/gotoshare_line"
		        android:layout_width="100dp"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:gravity="center"
		        android:padding="2dp"
		        android:visibility="gone"
		        android:layout_margin="10dp"
		        >
		        <ImageView 
		            android:layout_gravity="center"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/line_image"
		            />
		        <TextView 
		            android:layout_marginTop="5dp"
		             android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		           android:text="Line"
		           android:textColor="#000000"
		        android:textSize="13sp"
		            />
		    </LinearLayout>
	    </LinearLayout>

	    <ImageView
	        android:id="@+id/close_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="27dp"
	        android:layout_marginTop="25dp"
	        android:layout_toRightOf="@+id/sharebglayout"
	        android:src="@drawable/ic_tv_delet" />

	</RelativeLayout>

</RelativeLayout>