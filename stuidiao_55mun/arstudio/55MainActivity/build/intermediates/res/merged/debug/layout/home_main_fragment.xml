<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/homecate_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_tab_height"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <FrameLayout
                android:id="@+id/hometab_line1_fram1"
                android:layout_width="fill_parent"
                android:layout_height="2.2dip"
                android:layout_alignParentBottom="true" >

                <View
                    android:id="@+id/homecate_tab_line1"
                    android:layout_width="fill_parent"
                    android:layout_height="2.2dip"
                    android:background="#288be1"
                    android:gravity="center" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="#c6c6c6"
                    android:gravity="center" />
            </FrameLayout>

            <Button
                android:id="@+id/homebt_rec_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/hometab_line1_fram1"
                android:background="#00000000"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="7dp"
                android:text="@string/bottom_home"
                android:textColor="@color/color_top_tab_label"
                android:textSize="@dimen/text_size_viewpager_tab" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/hometab_divider"
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="#bbbbbb"
            android:padding="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/hometab_line1_fram2"
                android:layout_width="fill_parent"
                android:layout_height="2.2dip"
                android:layout_alignParentBottom="true" >

                <View
                    android:id="@+id/homecate_tab_line2"
                    android:layout_width="fill_parent"
                    android:layout_height="2.2dip"
                    android:background="#288be1"
                    android:gravity="center" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_gravity="bottom"
                    android:background="#c6c6c6"
                    android:gravity="center" />
            </FrameLayout>

            <Button
                android:id="@+id/homebt_cate_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/hometab_line1_fram2"
                android:background="#00000000"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="7dp"
                android:text="@string/bottom_cate"
                android:textColor="@color/color_top_tab_label"
                android:textSize="@dimen/text_size_viewpager_tab" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homegame_rec_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/homecate_bottom"
        android:orientation="horizontal" >

        <android.support.v4.view.ViewPager
            android:id="@+id/homeviewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />
    </LinearLayout>

</RelativeLayout>