<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_history"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="@drawable/myapp_item_action_selector_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/suggestion_item"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/myapp_item_action_selector_bg"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/suggestion_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18.0dip"
                android:layout_marginRight="17.0dip"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/search_btn_history_icon_selector" />

            <TextView
                android:id="@+id/suggestion_item_title"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:duplicateParentState="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@drawable/search_item_textcolor_selector"
                android:textSize="16.0sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/suggestion_item_del"
            android:layout_width="73.0dip"
            android:layout_height="40.0dip"
            android:layout_marginRight="0.0dip"
            android:background="@drawable/myapp_item_action_selector_bg"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:scaleType="centerInside"
            android:src="@drawable/search_btn_refine_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_clear_all"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="@drawable/myapp_item_action_selector_bg"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/suggestion_clear_item_title"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:duplicateParentState="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:clickable="false"
            android:singleLine="true"
            android:text="@string/search_clear_history"
            android:textColor="#00cc99"
            android:textSize="16.0sp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#cccccc"
        android:duplicateParentState="true"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</LinearLayout>