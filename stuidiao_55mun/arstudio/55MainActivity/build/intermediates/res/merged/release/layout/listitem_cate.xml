<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rank_item_bg"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/listitem_cate_left"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="1.5dp"
        android:background="@drawable/beston_cate_bg_drawable"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/divider"
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="#288be1" />

        <TextView
            android:id="@+id/listitem_cate_name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/divider"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cate_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/listitem_cate_name_left"
            android:layout_below="@id/listitem_cate_name_left"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingTop="5dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/listitem_cate_right"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="1.5dp"
        android:background="@drawable/beston_cate_bg_drawable"
        android:paddingRight="5dp"
        android:paddingTop="10dp" 
        android:layout_weight="1"
        android:visibility="invisible">

        <TextView
            android:id="@+id/divider1"
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="#288be1" />

        <TextView
            android:id="@+id/listitem_cate_name_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/divider1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cate_content_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/listitem_cate_name_right"
            android:layout_below="@id/listitem_cate_name_right"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingTop="5dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>