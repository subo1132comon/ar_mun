<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"  
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <include layout="@layout/top_frame" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/about_bg"
        android:layout_margin="9dp"         
        android:paddingBottom="@dimen/about_padding_bottom" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"   >     
 
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"                    
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="35dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_app" />
                
                <TextView
                    android:id="@+id/app_ver_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"  
                    android:layout_marginBottom="13dip"
                    android:text="@string/app_name"
                    android:textColor="#3f3f3f"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/updated_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"  
                    android:text="@string/updated_time"
                    android:textColor="#b7b7b7"
                    android:textSize="12sp" />                

            </LinearLayout>
            
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/horizontal_divder_line_1px"  /> 
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="6dp"
                android:text="@string/about_declare"
                android:textColor="#3f3f3f"
                android:textSize="13sp"
                />            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"                
                android:text="@string/about_declare_info"
                android:textColor="#484848"
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.4"                
                />            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >  
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"  
                    android:layout_gravity="left" 
                    android:layout_weight="1" 
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="@string/about_app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/weixin_id_size" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"  
                    android:layout_gravity="right" 
                    android:layout_weight="1" 
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:gravity="right" 
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/weixin_id_size" />                
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/horizontal_line2_height"
                android:layout_marginBottom="8dip"
                android:layout_marginTop="8dip"                
                android:src="@drawable/line_horizontal_feed_back" 
                android:visibility="gone"/>
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >              
                <TextView
                    android:id="@+id/tv_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:layout_alignParentLeft="true"  
                    android:layout_gravity="left" 
                    android:layout_weight="1" 
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"                
                    android:textColor="@color/black"
                    android:textSize="@dimen/weixin_id_size" />
                <TextView
                    android:id="@+id/app_version_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"  
                    android:layout_gravity="right" 
                    android:layout_weight="1" 
                    android:gravity="right" 
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"                    
                    android:textColor="@color/black"
                    android:textSize="@dimen/weixin_id_size" />                 
            </LinearLayout>
            
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/horizontal_line2_height"
                android:layout_marginBottom="8dip"
                android:layout_marginTop="8dip"                
                android:src="@drawable/line_horizontal_feed_back" 
                android:visibility="gone"/>
                      
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >              
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"                
                    android:text="@string/support_system"
                    android:textColor="@color/black"
                    android:textSize="@dimen/weixin_id_size" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"  
                    android:layout_gravity="right" 
                    android:layout_weight="1" 
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:gravity="right" 
                    android:text="@string/suppert_system"
                    android:textColor="@color/black"
                    android:textSize="@dimen/weixin_id_size" />            
            </LinearLayout>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/horizontal_line2_height"
                android:layout_marginBottom="8dip"
                android:layout_marginTop="8dip"                
                android:src="@drawable/line_horizontal_feed_back" 
                android:visibility="gone"/>
                        
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"                
                android:autoLink="email"
                android:textColor="@color/black"
                android:textSize="@dimen/weixin_id_size" 
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"                
                android:autoLink="web"
                android:textColor="@color/black"
                android:textSize="@dimen/weixin_id_size" 
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"                
                android:autoLink="phone"
                android:textColor="@color/black"
                android:textSize="@dimen/weixin_id_size"
                android:visibility="gone" />

           <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
            <TextView
                android:id="@+id/appjs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"                
                android:text="@string/appjs"
                android:textColor="@color/black"
                android:textSize="@dimen/weixin_id_size" />

   
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appjs"
                android:layout_marginBottom="20dip"   
                android:layout_marginTop="10dip"   
                
                android:paddingLeft="10dip"
                android:paddingRight="10dip"   
                  
                           
                android:lineSpacingExtra="3dip"
                android:text="@string/product_dec"
                android:textColor="@color/black"
                android:textSize="@dimen/weixin_id_size"  />
            
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_weibo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"                
                android:textColor="@color/black"
                android:textSize="@dimen/weixin_id_size"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/lv_weibo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip" 
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_sina_webor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon" />

                <ImageView
                    android:id="@+id/img_tencent_webor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>