<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/ll_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect_bg_selector"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/listitem_rank_icon"
                android:layout_width="@dimen/listitem_app_icon"
                android:layout_height="@dimen/listitem_app_icon"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:id="@+id/listitem_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/l_home_type_new" />

            <Button
                android:id="@+id/listitem_rank_btn"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/main_btn_bg_white"
                android:text="@string/btn_install"
                android:textSize="@dimen/listitem_app_btn_size" />

            <TextView
                android:id="@+id/listitem_rank_name"
                style="@style/text_app_item_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/listitem_rank_icon"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/listitem_rank_btn"
                android:layout_toRightOf="@+id/listitem_rank_icon"
                android:singleLine="true"
               />

            <TextView
                android:id="@+id/listitem_rank_category"
                style="@style/text_app_item_des_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listitem_rank_name"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@id/listitem_rank_btn"
                android:layout_toRightOf="@+id/listitem_rank_icon"
                android:singleLine="true"
              />

            <ProgressBar
                android:id="@+id/downloadProgressBar"
                style="@style/ProgressBarMain.Download"
                android:layout_width="fill_parent"
                android:layout_height="4dip"
                android:layout_below="@+id/listitem_rank_category"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/listitem_rank_btn"
                android:layout_toRightOf="@id/listitem_rank_icon"
                android:gravity="center"
                android:max="100"
                android:progress="0"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:id="@+id/listitem_rank_line"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@color/round_rect_stroke_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/listitem_rank_t1"
                style="@style/text_app_item_des_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/rank_t1" />

            <TextView
                android:id="@+id/listitem_rank_ranknum"
                style="@style/text_app_item_des_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              
                android:layout_marginLeft="5dp"
                android:textColor="#676767" />

            <ImageView
                android:id="@+id/listitem_rank_rankicon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/icon_next" />

            <TextView
                android:id="@+id/listitem_rank_rankcount"
                style="@style/text_app_item_des_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
               />

            <ImageView
                android:id="@+id/listitem_rank_rating_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/l_rec_rat" 
                />

            <TextView
                android:id="@+id/listitem_rank_rating"
                style="@style/text_app_item_des_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
