<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/byttitlebar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/titlebar_content_height"
        android:background="@drawable/title_main_bg"
        android:orientation="horizontal" >
           
        <TextView
            android:id="@+id/feedback_back_btn"
            android:layout_width="62.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="4.0dip"
            android:background="@drawable/back_button_bg"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/titlebar_cancel"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/titlebar_icon"
            android:padding="8dp"
            android:layout_width="54.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/image_desc"
            android:focusable="false"
            android:scaleType="center"
            android:src="@drawable/icon"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/titlebar_back_arrow"
            android:layout_width="46.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/title_button_bg"
            android:contentDescription="@string/image_desc"
            android:focusable="false"
            android:scaleType="center"
            android:src="@drawable/icon_back"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/titlebar_navi_icon"
            android:layout_width="46.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/title_button_bg"
            android:contentDescription="@string/image_desc"
            android:focusable="false"
            android:scaleType="center"
            android:src="@drawable/app_empty_icon"
            android:visibility="gone" />

        <com.byt.market.view.AlwsydMarqueeTextView
            android:id="@+id/titlebar_title"
            style="@style/titlebar_text_style"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3.0dip"
            android:layout_weight="1.0"
            android:clickable="true"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/app_name" />
         <RelativeLayout
               android:paddingLeft="5dp"
            android:paddingRight="3dp"
             android:visibility="gone"
              android:layout_weight="1.0"
            android:id="@+id/search_page_view"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"        
            android:background="@drawable/search_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" >
           
              <ImageView
                   android:layout_marginRight="14dp"
                android:id="@+id/search_page_search"
                style="@style/searchbox_voice_and_clear_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                
                android:background="@drawable/btn_search_submit" />

            <ImageView
                android:id="@+id/search_page_clear"
                style="@style/searchbox_voice_and_clear_style"
         android:layout_toLeftOf="@id/search_page_search"
              
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:scaleType="center"
                android:src="@drawable/search_clear"
             />
               <TextView
                   android:layout_toLeftOf="@id/search_page_clear"
                android:id="@+id/search_page_key"
                style="@style/searchbox_text_style"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"           
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/search_hint"
                android:textColor="#757985"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:textSize="17sp" >
            </TextView>
            
        </RelativeLayout>
         <RelativeLayout
            android:id="@+id/titlebar_applist_button_container2"
            android:layout_width="54.0dip"
            android:visibility="gone"
            android:layout_height="fill_parent" 
            android:layout_marginLeft="0dip">

          <ImageView
                android:id="@+id/iv_settings2"
                android:layout_width="54.0dip"
                android:layout_height="fill_parent"
               android:background="@drawable/title_button_bg"
                android:clickable="true"
                android:contentDescription="@string/image_desc"
                android:focusable="false"
                android:paddingRight="5.0dip"
                android:scaleType="center"
                android:visibility="gone"
                android:src="@drawable/ic_menu_moreoverflow_normal_holo_dark" />
          
          
        </RelativeLayout>
         

        <ImageView
            android:id="@+id/titlebar_search_button"
            android:layout_width="54.0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/title_button_bg"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:focusable="false"
            android:scaleType="center"
            android:src="@drawable/icon_search"
            />
        <ImageView
            android:id="@+id/topline1"
            android:layout_width="2.0dip"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:src="@drawable/topbuttonline"
             />
        <ImageView
            android:id="@+id/collect_button"
            android:layout_width="54.0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/title_button_bg"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:focusable="false"
            android:scaleType="center"
            android:src="@drawable/btn_favor_bg"
            android:visibility="gone" />
         <ImageView
            android:id="@+id/topline2"
            android:visibility="gone"           
            android:layout_width="2.0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/topbuttonline"
             />
         <RelativeLayout
            android:id="@+id/titlebar_applist_button_container"
            android:layout_width="46.0dip"
            android:layout_height="fill_parent" 
           >         
        <ImageView
                android:id="@+id/iv_settings"
                android:layout_width="54.0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/title_button_bg"
                android:clickable="true"
                android:contentDescription="@string/image_desc"
                android:focusable="false"
                android:scaleType="center"
                android:src="@drawable/ic_menu_moreoverflow_normal_holo_dark" />
           
        </RelativeLayout>
         <ImageView
            android:id="@+id/topline3"
            android:layout_width="2.0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/topbuttonline"
            android:visibility="gone"
             />
        <ImageView
            android:id="@+id/share_button"
            android:layout_width="54.0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/title_button_bg"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:focusable="false"
            android:scaleType="center"
            android:src="@drawable/btn_share2_normal"
            android:visibility="gone" />
         <ImageView
            android:id="@+id/topline4"
            android:layout_width="2.0dip"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:src="@drawable/topbuttonline"
             />
           <ImageView
            android:id="@+id/top_downbutton"
            android:layout_width="54.0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/title_button_bg"
            android:clickable="true"
            android:contentDescription="@string/image_desc"
            android:focusable="false"
            android:scaleType="center"
            android:src="@drawable/top_downicon"
            android:visibility="visible"
         />

        <TextView
            android:id="@+id/back_btn"
            style="@style/titlebar_text_style"
            android:layout_width="62.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="4.0dip"
            android:background="@drawable/back_button_bg"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:text="@string/titlebar_cancel"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/title_btn"
            style="@style/titlebar_text_style"
            android:layout_width="62.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4.0dip"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_white"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:textSize="13sp"
            android:visibility="gone"
            android:text="@string/titlebar_cancel" />
		
        <ImageView
            android:id="@+id/iv_gap"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/titlebar_bg_gap" 
            android:visibility="gone"/>
    </LinearLayout>

 <!--    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/top_nav_shadow" /> -->

</LinearLayout>