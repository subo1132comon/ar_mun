<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/head_relativelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" 
            android:layout_marginRight="5dp"
            >

            <com.byt.market.view.XCRoundRectImageView
                android:id="@+id/head_imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/app_userpic" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/jokecommentlistitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/head_relativelayout"
            android:layout_alignTop="@+id/head_relativelayout"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="2dp"
                android:singleLine="true"
                android:text="sender"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.1"
                android:padding="2dp"
                android:text="context"
                android:textColor="#636251"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/joke_comment_line" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>