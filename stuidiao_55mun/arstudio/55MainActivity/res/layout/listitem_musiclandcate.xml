<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_frame"
    android:gravity="top|center_horizontal"
    android:orientation="horizontal" >

    <RelativeLayout
         android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="7dp"
        android:orientation="vertical" >
     

        <FrameLayout
            android:id="@+id/istitem_music_content_1"
         	android:layout_alignParentTop="true"
            android:layout_width="@dimen/musicsublist_height"
            android:layout_height="@dimen/musicsublist_height" >

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/musicrankpic"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/default_disc_360"
                android:contentDescription="2" />
             <TextView 
                android:layout_gravity="bottom"
                android:background="@drawable/index_list_cover"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
               />

            <TextView
                android:id="@+id/musicranklandlayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00000000" />
        </FrameLayout>
           <TextView
            android:layout_below="@id/istitem_music_content_1"
            android:paddingTop="5dp"
            android:id="@+id/listitem_cate_name_left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#ff333333"
            android:textSize="14.0sp" />
           <TextView 
		    android:layout_below="@id/listitem_cate_name_left"
		    android:layout_width="fill_parent"
		    android:layout_height="21dp"
		    />

        
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"		      
        android:layout_marginLeft="7dp"
        android:layout_marginRight="14dp"
        android:orientation="vertical" >
        

        <FrameLayout
             android:id="@+id/istitem_music_content_2"
            android:layout_alignParentTop="true"
            android:layout_width="@dimen/musicsublist_height"
            android:layout_height="@dimen/musicsublist_height" >

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/musicrankpic2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/default_disc_360" 
                 android:contentDescription="2" 
                />
            <TextView 
                android:layout_gravity="bottom"
                android:background="@drawable/index_list_cover"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
               />

            <TextView
                android:id="@+id/musicranklandlayout2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00000000" />
        </FrameLayout>
		<TextView
            android:paddingTop="5dp"
          android:layout_below="@id/istitem_music_content_2"
            android:id="@+id/listitem_cate_name_left2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#ff333333"
            android:textSize="14.0sp" />
		<TextView 
		    android:layout_below="@id/listitem_cate_name_left2"
		    android:layout_width="fill_parent"
		    android:layout_height="21dp"
		    />
     
    </RelativeLayout>

</LinearLayout>