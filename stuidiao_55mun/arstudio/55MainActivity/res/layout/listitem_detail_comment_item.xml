<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
   android:paddingBottom="5dp"
    >

    <RelativeLayout
            android:background="@drawable/bg_block"       
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <ImageView
            android:id="@+id/listitem_comm_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:src="@drawable/default_user"
            android:visibility="gone" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:src="@drawable/detail_comm_portrait" />

        <LinearLayout
            android:id="@+id/listitem_comm_info_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_toRightOf="@+id/listitem_comm_icon"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip">

                <TextView
                    android:id="@+id/appcommAuthorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:maxWidth="200dp"
                    android:singleLine="true"                 
                    android:textColor="#929090"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/appcommTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/appcommRatingView"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:textColor="#929090"
                    android:textSize="13sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/listitem_comm_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="13.33dip"
              android:textColor="@color/grey21"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2" 
                android:visibility="gone">

                <TextView
                    android:id="@+id/listitem_comm_moble"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                  
                    android:textColor="#929090"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/listitem_comm_vname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:singleLine="true"
               
                    android:textColor="#929090"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>