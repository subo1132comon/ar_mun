<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/musicrectop"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fafcfc"
        >
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="210dp"
            />
        <ImageView 
            android:id="@+id/musicicon"
            android:layout_margin="11.5dp"
            android:layout_height="@dimen/musiciconwidth"
            android:layout_width="@dimen/musiciconwidth"
            android:src="@drawable/default_disc_360"
             android:contentDescription="2" 
           
            />
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="142dp"
            android:orientation="vertical"
             android:layout_toRightOf="@id/musicicon"
             android:gravity="center|left"
            >
                   <TextView 
            android:layout_marginRight="24dp"      
            android:id="@+id/musicname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3e3e3e"
            android:maxLines="2"
            android:ellipsize="none"
            android:textSize="17sp"
            />
        <TextView 
            android:paddingTop="4dp"
             android:layout_marginTop="16dp"
            android:id="@+id/musicupdatetiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#aaaaaa"
            android:textSize="12sp"
            />
            
        </LinearLayout>
 
        
       <!--  <TextView 
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/musicicon"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#d8d9da"
            /> -->
        
       <RelativeLayout 
           android:paddingRight="10dp"
           android:paddingLeft="16dp"
           android:id="@+id/playallmusic"
           android:layout_below="@id/musicicon"
           android:layout_height="68dp"
           android:layout_width="fill_parent"
           android:layout_alignParentBottom="true"
            android:background="@drawable/listmusicitembuttonbgdraw"
           >
           <TextView 
               android:drawablePadding="6dp"
               android:layout_centerVertical="true"
               android:gravity="center_vertical"
               android:drawableLeft="@drawable/playalllistmusic"
               android:text="@string/playallmusic"
               android:textColor="#ff333333"
               android:textSize="15sp"
               android:layout_height="wrap_content"
               android:layout_width="fill_parent"/>
           <ImageView
            android:id="@+id/musicdivider"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#d8d9da" />

       </RelativeLayout>
</RelativeLayout>