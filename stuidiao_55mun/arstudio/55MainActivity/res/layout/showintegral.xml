<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"   
    android:background="#eaeaea"
   
    >
    
    <include
        android:id="@+id/main_top_frame"
        layout="@layout/top_frame" />  
       
    <ScrollView    
       android:fadingEdge="none"
       android:overScrollMode="never"
       android:layout_width="match_parent"
       android:layout_height="match_parent"  
       >    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"      
        android:layout_margin="6dip"  
        android:background="@drawable/showlevel_bg"        
        >       
    
    
       <!-- 用户信息栏  start-->
        <RelativeLayout
            android:id="@+id/userbg"
            android:layout_width="fill_parent"
            android:layout_height="180dp" 
            android:layout_marginTop="5dip"    
            >
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical" 
                >
                <com.byt.market.view.XCRoundRectImageView
                    android:id="@+id/user_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/app_userpic"
                    />
                <TextView
                    android:id="@+id/appusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                      
                    android:gravity="center"	
			        android:textColor="#000000"    
			        android:textSize="20sp" 
			        android:textStyle="bold"/>    
			        
                <LinearLayout                   
                    android:orientation="horizontal"                    
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    android:gravity="bottom|center_horizontal"  
                    android:layout_marginTop="1dp"    
                    android:layout_marginBottom="5dp"   
                    >
                     <LinearLayout 
                     android:orientation="horizontal"
                     android:id="@+id/integralicon"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"  
                     android:gravity="center"  
                     android:background="@drawable/level_bg"
                     android:visibility="gone"
                     
                     >
                     <ImageView  
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"                         
                         android:visibility="gone"                
                     />
                     </LinearLayout>  
                     
                     <LinearLayout 
                         android:id="@+id/mine_vip_level"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"   
                         android:layout_marginLeft="5dp"             
                     >
                     </LinearLayout>  
                 </LinearLayout>                                

                <TextView 
                    android:id="@+id/mine_ingegral"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"   
                      
                    android:gravity="center"	                 
                    android:textSize="16sp"
                    android:textColor="#000000"         />                  
            </LinearLayout>
            
            <Button
                android:id="@+id/sharebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"  
                android:layout_marginRight="15dp"  
                android:background="@drawable/share_btn_drawable"
                />

            
        </RelativeLayout>
        <!-- 用户信息栏   end --> 
        
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/line_horizontal_feed_back"/>
        
        <TextView 
            android:paddingLeft="4dp"
            android:id="@+id/level_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"   
            android:layout_marginLeft="10dp" 
            android:layout_marginRight="10dp"   
            android:textSize="16sp"
            android:textColor="#000000" 
            /> 
         <TextView 
            android:paddingLeft="4dp"
            android:id="@+id/shareto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" 
            android:layout_marginRight="10dp"   
            android:layout_marginBottom="30dp"          
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" 
            />        
           
        <!-- 积分级别示例 start-->  
        <LinearLayout             
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"     
            android:layout_marginLeft="15dp"     
            android:gravity="bottom"  >           
        
            <LinearLayout 
                android:id="@+id/tv_container_1"
                android:layout_width="wrap_content"                
                android:layout_height="wrap_content"
                android:orientation="horizontal"                
                >
            </LinearLayout>        
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" /> 
        </LinearLayout> 
             
        <LinearLayout             
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"       
            android:layout_marginLeft="15dp"            
            android:gravity="bottom"  >           
        
            <LinearLayout 
                android:id="@+id/tv_container_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"                
                >
            </LinearLayout> 
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" /> 
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" />                 
        </LinearLayout>    

        <LinearLayout             
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  
            android:layout_marginLeft="15dp"             
            android:gravity="bottom"  >           
        
            <LinearLayout 
                android:id="@+id/tv_container_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"               
                >
            </LinearLayout> 
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" /> 
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" />    
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" />                               
        </LinearLayout>        
        
        <LinearLayout             
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"  
            android:layout_marginLeft="15dp"             
            android:gravity="bottom"  >           
        
            <LinearLayout 
                android:id="@+id/tv_container_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"                
                >
            </LinearLayout> 
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" /> 
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" />    
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" />    
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" />                                            
        </LinearLayout>     
        
        <LinearLayout             
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"    
            android:layout_marginLeft="15dp" 
            android:layout_marginBottom="15dp"            
            android:gravity="bottom"  >           
        
            <LinearLayout 
                android:id="@+id/tv_container_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"                
                >
            </LinearLayout> 
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" /> 
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" />    
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" />    
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" />   
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:src="@drawable/level_bg" />                                                           
        </LinearLayout>          
        <!-- 积分级别示例 start-->
        <LinearLayout 
                android:id="@+id/lever_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"  
                android:layout_marginTop="27dp"
                android:paddingBottom="30dp"  
                >

            <TextView
                android:id="@+id/level_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16dp"
                android:text="@string/leve_content"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                android:id="@+id/leve_tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="VIP 1:" />
                <TextView
                android:id="@+id/leve_discrble7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/leve_tv7"
                android:textColor="#cccccc"
                android:text="@string/leve1_discrble" />
            </RelativeLayout>
             <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                android:id="@+id/leve_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="VIP 2:" />
                <TextView
                android:id="@+id/leve_discrble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/leve_tv"
                android:textColor="#cccccc"
                android:text="@string/leve2_discrble" />
            </RelativeLayout>
             <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                android:id="@+id/leve_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="VIP 3:" />
                <TextView
                android:id="@+id/leve_discrble4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/leve_tv4"
                android:textColor="#cccccc"
                android:text="@string/leve3_discrble" />
            </RelativeLayout>
             <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                android:id="@+id/leve_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="VIP 4:" />
                <TextView
                android:id="@+id/leve_discrble3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/leve_tv3"
                android:textColor="#cccccc"
                android:text="@string/leve4_discrble" />
            </RelativeLayout>
             <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView
                android:id="@+id/leve_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="VIP 5:" />
                <TextView
                android:id="@+id/leve_discrble1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/leve_tv1"
                android:textColor="#cccccc"
                android:text="@string/leve5_discrble" />
            </RelativeLayout>
            </LinearLayout> 
    </LinearLayout>
</ScrollView>
</LinearLayout>

