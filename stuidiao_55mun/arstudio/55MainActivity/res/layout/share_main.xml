<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/input_text"
    android:orientation="vertical"

    >
       <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:minWidth="300dp"
        
        android:background="@drawable/input_text2" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/share_info_to_friend"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>   
	<TextView
	     android:paddingLeft="10dp"
	    android:id="@+id/sharechoice"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:text="@string/integral_sharefs"
	    android:textColor="#000000"
	     android:textSize="16sp" 
	     android:visibility="gone"
	     />
		

          <GridView 
              android:id="@+id/testlistviewid"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:numColumns="1"
              
              ></GridView>
          <Button 
              android:id="@+id/getmoreshare"
              android:layout_height="50dip"
              android:layout_width="fill_parent"
               android:background="@drawable/bestone_button_press"
               android:text="@string/moreshare"
                android:textSize="16sp" 
              />
         <TextView
	    android:id="@+id/sharegztext"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:text="@string/integral_help"
	    android:textColor="#000000"
	     android:textSize="16sp" 
	    android:visibility="gone"
	     />  
     <TextView
         android:paddingTop="5dp"
          android:paddingBottom="5dp"
           android:paddingLeft="10dp"
            android:paddingRight="10dp"
	    android:id="@+id/sharetext"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:text="@string/integral_help_text"
	    android:textColor="#000000"
	    android:visibility="gone"
	     android:textSize="14sp" 
	     />
     <Button 
         android:id="@+id/appsharebutton"
           android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginLeft="20dp"
	  android:layout_marginRight="20dp"
	    android:background="@drawable/beston_btn_onclick"
	  android:text="@string/share_app"
	
         />
      

</LinearLayout>
