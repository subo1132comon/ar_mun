<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/listitem_mygame_1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:padding="8dp"
            android:id="@+id/listitem_mygame_icon_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/app_empty_icon" />

        <TextView
            android:id="@+id/listitem_mygame_name_1"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/text_2"
            android:textColor="@color/grey21"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listitem_mygame_2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:padding="8dp"
            android:id="@+id/listitem_mygame_icon_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/app_empty_icon" />

        <TextView
            android:id="@+id/listitem_mygame_name_2"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/text_2"
            android:textColor="@color/grey21"
            android:layout_height="wrap_content"
         />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listitem_mygame_3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:padding="8dp"
            android:id="@+id/listitem_mygame_icon_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/app_empty_icon" />

        <TextView
            android:id="@+id/listitem_mygame_name_3"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/text_2"
            android:textColor="@color/grey21"
            android:layout_height="wrap_content"
         />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listitem_mygame_4"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:padding="8dp"
            android:id="@+id/listitem_mygame_icon_4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/app_empty_icon" />

        <TextView
            android:id="@+id/listitem_mygame_name_4"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/text_2"
            android:textColor="@color/grey21"
            android:layout_height="wrap_content"
          />
    </LinearLayout>

</LinearLayout>