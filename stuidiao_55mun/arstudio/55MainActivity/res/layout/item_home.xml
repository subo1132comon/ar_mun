<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
         >

          <ImageView
             android:id="@+id/ic_bg"
             android:layout_width="@dimen/lift_ic_width"
             android:layout_height="@dimen/lift_ic_height"
             android:layout_alignParentStart="true"
             android:layout_marginStart="10dp"
             android:scaleType="fitXY"
             android:layout_centerVertical="true"
             android:src="@drawable/ic_bt_bg" />


        <TextView
            android:id="@+id/top_titile_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ic_bg"
            android:paddingBottom="10dp"
            android:layout_marginStart="2dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:text="最火" />
        
        <TextView
            android:id="@+id/more_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/End_imageView"
            android:textColor="@color/text_gray"
            android:layout_marginEnd="2dp"
            android:text="@string/more"/>
        <ImageView
        android:id="@+id/End_imageView"
        android:layout_width="@dimen/right_ic_width"
        android:layout_height="@dimen/right_ic_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bt_right" 
        />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/relativeLayout_1"
         >
         <ImageView
            android:id="@+id/head_imageView1"
            android:layout_width="@dimen/home_head_icwith"
            android:layout_height="@dimen/home_head_icheight"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:src="@drawable/app_empty_icon"
             android:contentDescription="2"
            />
         <LinearLayout
             android:id="@+id/text_linlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/head_imageView1"
        android:orientation="vertical"
         >
        	<TextView
            android:id="@+id/title_one_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="book" />
        	<TextView
            android:id="@+id/title_tow_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_gray"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="bo" />
        	<TextView
            android:id="@+id/title_tree_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="boo" />
    </LinearLayout>
    	<TextView
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/text_linlayout1"
            android:layout_toEndOf="@+id/head_imageView1"
            android:background="@color/gray"
            />
          <ImageView
        android:id="@+id/End_imageView1"
        android:layout_width="@dimen/right_ic_width"
        android:layout_height="@dimen/right_ic_height"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_bt_right" 
         />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/relativeLayout_2"
         >
         <ImageView
            android:id="@+id/head_imageView2"
            android:layout_width="@dimen/home_head_icwith"
            android:layout_height="@dimen/home_head_icheight"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
             android:src="@drawable/app_empty_icon"
              android:contentDescription="2"
            />
         <LinearLayout
             android:id="@+id/text_linlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
         android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/head_imageView2"
        android:orientation="vertical" >
        	<TextView
            android:id="@+id/title_one_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="book" />
        	<TextView
            android:id="@+id/title_tow_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="bo" />
        	<TextView
            android:id="@+id/title_tree_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="boo" />
    </LinearLayout>
    	<TextView
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/text_linlayout2"
            android:layout_toEndOf="@+id/head_imageView2"
            android:background="@color/gray"
            />
          <ImageView
        android:id="@+id/rd_imageView"
       android:layout_width="@dimen/right_ic_width"
        android:layout_height="@dimen/right_ic_height"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_bt_right" 
        android:scaleType="fitXY"
         />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/relativeLayout_3"
         >
         <ImageView
            android:id="@+id/head_imageView3"
           android:layout_width="@dimen/home_head_icwith"
            android:layout_height="@dimen/home_head_icheight"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:src="@drawable/app_empty_icon"
             android:contentDescription="2"
             />
         <LinearLayout
             android:id="@+id/text_linlayout"
             android:layout_marginStart="8dp"
              android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/head_imageView3"
        android:orientation="vertical" >
        	<TextView
            android:id="@+id/title_one_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="book" />
        	<TextView
            android:id="@+id/title_tow_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="bo" />
        	<TextView
            android:id="@+id/title_tree_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="boo" />
    </LinearLayout>
          <ImageView
        android:id="@+id/r_imageView"
       android:layout_width="@dimen/right_ic_width"
        android:layout_height="@dimen/right_ic_height"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_bt_right" 
        android:scaleType="fitXY"
         />
    </RelativeLayout>

    <com.byt.market.view.IntervalTextview
    android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_centerHorizontal="true"
        android:background="@color/bg_frame"
        android:layout_marginTop="5dp"
         android:layout_below="@+id/relativeLayout_4"
    />
</RelativeLayout>